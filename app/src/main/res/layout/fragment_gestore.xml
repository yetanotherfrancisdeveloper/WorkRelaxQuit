<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.francisdeveloper.workrelaxquit.ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- app:layout_constraintBottom_toTopOf="@+id/adView" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/page_manager" />

            <TextView
                android:paddingTop="24dp"
                android:paddingLeft="6dp"
                android:id="@+id/dateTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inserisci la data in cui hai preso ore di ferie/permesso:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Data ore di ferie/permesso usate"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <Spinner
                android:id="@+id/dropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="24dp"
                android:paddingLeft="6dp"
                android:id="@+id/textLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inserisci le ore:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/feriePermessiInput"
                android:contentDescription="Ore di ferie/permesso usate"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:textColor="@color/white"
                android:text="Aggiungi" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            -->

            <!-- CardView for Ferie -->
            <androidx.cardview.widget.CardView
                android:id="@+id/remainingFerieCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/main">

                <!-- Customize the content inside the CardView to display remaining Ferie information -->
                <!-- For example, you can use TextViews to display remaining Ferie data -->
                <!-- Use a LinearLayout with horizontal orientation to align the label and value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Left side - Label -->
                    <TextView
                        android:id="@+id/remainingFerieLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ferie Rimaste"
                        android:textColor="@color/secondary"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <!-- Right side - Value -->
                    <TextView
                        android:id="@+id/remainingFerieValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/secondary"
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:gravity="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView for Permessi -->
            <androidx.cardview.widget.CardView
                android:id="@+id/remainingPermessiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/accent">

                <!-- Customize the content inside the CardView to display remaining Permessi information -->
                <!-- For example, you can use TextViews to display remaining Permessi data -->
                <!-- Use a LinearLayout with horizontal orientation to align the label and value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Left side - Label -->
                    <TextView
                        android:id="@+id/remainingPermessiLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permessi Rimasti"
                        android:textColor="@color/secondary"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <!-- Right side - Value -->
                    <TextView
                        android:id="@+id/remainingPermessiValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/secondary"
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:gravity="end" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

