<?xml version="1.0" encoding="utf-8"?>
<!-- waving_hand.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/secondary" /> <!-- Background color -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Hand icon -->
    <item
        android:gravity="center_vertical|start"
        android:left="8dp">
        <animated-rotate
            android:drawable="@drawable/ic_hand_wave"
            android:pivotX="0%"
            android:pivotY="50%"
            android:fromDegrees="0"
            android:toDegrees="30">
        </animated-rotate>
    </item>

    <!-- Welcome text -->
    <item
        android:gravity="center_vertical|start"
        android:left="56dp">
        <bitmap
            android:src="@drawable/ic_welcome_text"
            android:gravity="center_vertical" />
    </item>
</layer-list>
